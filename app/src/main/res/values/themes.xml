<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovRefApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_engine</item>
        <item name="colorPrimaryVariant">@color/red_sangria</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorAccent">@color/yellow_energy</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_sangria</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MovRefApplication.ClearScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/red_sangria</item>
    </style>

    <style name="Theme.MovRefApplication.SearchViewText" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.MovRefApplication.RoundedImageView10">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Theme.MovRefApplication.RoundedImageView16">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.MovRefApplication.CircleImageView">
        <item name="cornerSize">50%</item>
    </style>


</resources>