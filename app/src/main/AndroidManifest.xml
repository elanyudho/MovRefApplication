<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elanyudho.movrefapplication">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_new_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_new_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovRefApplication">
        <activity
            android:name=".ui.genre.listmoviebygenre.MovieGenreActivity"
            android:exported="false"
            android:theme="@style/Theme.MovRefApplication.ClearScreen"/>
        <activity
            android:name=".ui.genre.listgenre.ListGenreActivity"
            android:exported="false"
            android:theme="@style/Theme.MovRefApplication.ClearScreen" />
        <activity
            android:name=".ui.morepeople.MorePeopleActivity"
            android:exported="false"
            android:theme="@style/Theme.MovRefApplication.ClearScreen" />
        <activity
            android:name=".ui.moremovie.MoreMovieActivity"
            android:exported="false"
            android:theme="@style/Theme.MovRefApplication.ClearScreen" />
        <activity
            android:name=".ui.detailpeople.DetailPeopleActivity"
            android:exported="false"
            android:theme="@style/Theme.MovRefApplication.ClearScreen" />
        <activity
            android:name=".ui.detailmovie.DetailMovieActivity"
            android:exported="false"
            android:theme="@style/Theme.MovRefApplication.ClearScreen" />
        <activity
            android:name=".ui.splash.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.MovRefApplication.ClearScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/Theme.MovRefApplication.ClearScreen" />
    </application>

</manifest>